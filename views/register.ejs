<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register | CineReserve</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            mint: {
              50: '#f0fdf4',
              100: '#dcfce7',
              200: '#bbf7d0',
              500: '#10b981',
              600: '#059669',
              900: '#064e3b',
            }
          },
          animation: {
            'slide-up': 'slideUp 0.6s ease-out forwards',
          },
          keyframes: {
            slideUp: {
              '0%': { opacity: '0', transform: 'translateY(20px)' },
              '100%': { opacity: '1', transform: 'translateY(0)' },
            }
          }
        }
      }
    }
  </script>
</head>

<body class="bg-mint-50 min-h-screen font-sans flex items-center justify-center p-6">

  <div class="w-full max-w-md animate-slide-up">
    <div class="text-center mb-8">
      <a href="/" class="text-3xl font-black text-mint-900 tracking-tighter inline-flex items-center gap-2">
        CineReserve <span class="text-2xl">üé¨</span>
      </a>
      <p class="text-mint-600 font-bold text-sm uppercase tracking-widest mt-2">Join the Club</p>
    </div>

    <div class="bg-white p-10 rounded-[2.5rem] shadow-2xl shadow-mint-200/50 border border-mint-100">
      <h2 class="text-2xl font-black text-mint-900 mb-8 text-center">Create your account</h2>

      <form id="registerForm" class="space-y-5">
        <div>
          <label class="block text-xs font-black uppercase text-mint-900/40 mb-2 ml-1">Full Name</label>
          <input 
            type="text" 
            name="name" 
            placeholder="John Doe" 
            required 
            class="w-full px-5 py-4 bg-mint-50 border border-mint-100 rounded-2xl outline-none focus:ring-2 focus:ring-mint-500 focus:border-transparent transition-all text-mint-900 font-medium placeholder:text-mint-200"
          >
        </div>

        <div>
          <label class="block text-xs font-black uppercase text-mint-900/40 mb-2 ml-1">Email Address</label>
          <input 
            type="email" 
            name="email" 
            placeholder="name@example.com" 
            required 
            class="w-full px-5 py-4 bg-mint-50 border border-mint-100 rounded-2xl outline-none focus:ring-2 focus:ring-mint-500 focus:border-transparent transition-all text-mint-900 font-medium placeholder:text-mint-200"
          >
        </div>

        <div>
          <label class="block text-xs font-black uppercase text-mint-900/40 mb-2 ml-1">Password</label>
          <input 
            type="password" 
            name="password" 
            placeholder="Create a strong password" 
            required 
            class="w-full px-5 py-4 bg-mint-50 border border-mint-100 rounded-2xl outline-none focus:ring-2 focus:ring-mint-500 focus:border-transparent transition-all text-mint-900 font-medium placeholder:text-mint-200"
          >
        </div>

        <button 
          type="submit" 
          class="w-full py-4 bg-mint-900 text-white font-black rounded-2xl shadow-lg shadow-mint-900/20 hover:bg-black transition-all active:scale-95 mt-4"
        >
          Create Account
        </button>
      </form>

      <p id="feedbackMessage" class="hidden text-center font-bold text-sm mt-6"></p>

      <div class="mt-8 pt-8 border-t border-mint-50 text-center">
        <p class="text-slate-400 font-medium">
          Already have an account? 
          <a href="/login" class="text-mint-500 font-black hover:text-mint-600 ml-1 transition-colors underline decoration-2 underline-offset-4">Login</a>
        </p>
      </div>
    </div>
    
    <div class="text-center mt-8">
        <a href="/" class="text-mint-200 hover:text-mint-900 text-sm font-bold transition-colors">‚Üê Back to Explore Cities</a>
    </div>
  </div>

  <script>
  document.getElementById("registerForm").onsubmit = async (e) => {
    e.preventDefault();
    const feedbackEl = document.getElementById("feedbackMessage");
    const btn = e.target.querySelector('button');
    
    // UI state: Loading
    feedbackEl.classList.add('hidden');
    feedbackEl.classList.remove('text-red-500', 'text-mint-600');
    btn.innerText = "Creating...";
    btn.disabled = true;

    const name = e.target.name.value;
    const email = e.target.email.value;
    const password = e.target.password.value;

    try {
      const res = await fetch("/api/register", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ name, email, password })
      });

      const data = await res.json();

      if (res.ok && data.redirect) {
        feedbackEl.innerText = "Welcome! Redirecting...";
        feedbackEl.classList.add('text-mint-600');
        feedbackEl.classList.remove('hidden');
        setTimeout(() => {
            window.location.href = data.redirect;
        }, 1000);
      } else {
        feedbackEl.innerText = data.message || "Registration failed";
        feedbackEl.classList.add('text-red-500');
        feedbackEl.classList.remove('hidden');
        btn.innerText = "Create Account";
        btn.disabled = false;
      }
    } catch (err) {
      feedbackEl.innerText = "Network error. Please try again.";
      feedbackEl.classList.add('text-red-500');
      feedbackEl.classList.remove('hidden');
      btn.innerText = "Create Account";
      btn.disabled = false;
    }
  };
</script>

</body>
</html>