<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin: Manage Screens | CineReserve</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            mint: {
              50: '#f0fdf4',
              100: '#dcfce7',
              200: '#bbf7d0',
              500: '#10b981',
              600: '#059669',
              900: '#064e3b',
            }
          }
        }
      }
    }
  </script>
</head>

<body class="bg-mint-50 text-mint-900 min-h-screen font-sans selection:bg-mint-200">

  <!-- NAV -->
  <nav class="p-6 bg-white border-b border-mint-100 flex justify-between items-center sticky top-0 z-50 shadow-sm">
    <div class="max-w-6xl w-full mx-auto flex justify-between items-center">
      <a href="/" class="text-2xl font-black text-mint-900 tracking-tighter flex items-center gap-2">
        CineReserve üé¨ 
        <span class="text-[10px] uppercase bg-mint-900 text-white px-2 py-1 rounded-md tracking-widest ml-2">
          Admin
        </span>
      </a>

      <div class="flex items-center gap-6">
        <a href="/admin" class="text-sm font-bold text-mint-600 hover:text-mint-900 transition-colors">
          Dashboard
        </a>
        <a href="/" class="text-sm font-bold text-slate-400 hover:text-mint-900 transition-colors">
          ‚Üê Exit
        </a>
      </div>
    </div>
  </nav>

  <!-- MAIN -->
  <main class="max-w-6xl mx-auto py-16 px-6">

    <header class="mb-12 text-center">
      <h2 class="text-4xl font-black text-mint-900 mb-2">Screen Management</h2>
      <p class="text-slate-500 font-medium">
        Define screens and seating layout inside each theatre
      </p>
    </header>

    <div class="grid grid-cols-1 lg:grid-cols-12 gap-10">

      <!-- LEFT FORM -->
      <div class="lg:col-span-5">
        <div class="bg-white rounded-[2.5rem] border border-mint-100 shadow-2xl shadow-mint-200/40 p-8 sticky top-28">

          <h3 class="text-xl font-black text-mint-900 mb-6">Add New Screen</h3>

          <form action="/api/screens" method="POST" class="space-y-6">

            <!-- THEATRE -->
            <div>
              <label class="block text-xs font-black uppercase text-mint-900/40 mb-3 ml-1 tracking-widest">
                Theatre
              </label>
              <select name="theatre" required
                class="w-full bg-mint-50 border border-mint-100 rounded-2xl p-4 font-bold focus:ring-4 focus:ring-mint-200 focus:border-mint-500 outline-none appearance-none cursor-pointer">
                <option value="">Select Theatre...</option>
                <% theatres.forEach(t => { %>
                  <option value="<%= t._id %>">
                    <%= t.name %> ‚Äî <%= t.city.name %>
                  </option>
                <% }) %>
              </select>
            </div>

            <!-- SCREEN NAME -->
            <div>
              <label class="block text-xs font-black uppercase text-mint-900/40 mb-3 ml-1 tracking-widest">
                Screen Name
              </label>
              <input type="text" name="name" required
                placeholder="Screen 1 / IMAX / Audi 2"
                class="w-full bg-mint-50 border border-mint-100 rounded-2xl p-4 font-bold focus:ring-4 focus:ring-mint-200 focus:border-mint-500 outline-none transition-all">
            </div>

            <!-- ROWS -->
            <div>
              <label class="block text-xs font-black uppercase text-mint-900/40 mb-3 ml-1 tracking-widest">
                Rows
              </label>
              <input type="number" name="rows" min="1" required
                placeholder="e.g. 10"
                class="w-full bg-mint-50 border border-mint-100 rounded-2xl p-4 font-bold focus:ring-4 focus:ring-mint-200 focus:border-mint-500 outline-none transition-all">
            </div>

            <!-- COLS -->
            <div>
              <label class="block text-xs font-black uppercase text-mint-900/40 mb-3 ml-1 tracking-widest">
                Seats Per Row
              </label>
              <input type="number" name="cols" min="1" required
                placeholder="e.g. 12"
                class="w-full bg-mint-50 border border-mint-100 rounded-2xl p-4 font-bold focus:ring-4 focus:ring-mint-200 focus:border-mint-500 outline-none transition-all">
            </div>

            <!-- BTN -->
            <button type="submit"
              class="w-full bg-mint-900 text-white text-lg font-black py-4 rounded-2xl shadow-xl shadow-mint-900/20 hover:bg-black transition-all transform active:scale-[0.98]">
              Add Screen
            </button>

          </form>
        </div>
      </div>

      <!-- RIGHT TABLE -->
      <div class="lg:col-span-7">

        <h3 class="text-xl font-black text-mint-900 mb-6">Existing Screens</h3>

        <div class="bg-white rounded-[2.5rem] border border-mint-100 overflow-hidden shadow-xl shadow-mint-200/20">

          <table class="w-full text-left">

            <thead class="bg-mint-50 text-mint-900/40 text-[10px] uppercase font-black tracking-widest">
              <tr>
                <th class="p-5">Screen</th>
                <th class="p-5">Theatre</th>
                <th class="p-5">City</th>
                <th class="p-5 text-center">Layout</th>
              </tr>
            </thead>

            <tbody class="divide-y divide-mint-50">

              <% screens.forEach(screen => { %>
                <tr class="hover:bg-mint-50 transition-colors group">
                  
                  <td class="p-5 font-black text-mint-900 group-hover:text-mint-500 transition-colors">
                    <%= screen.name %>
                  </td>

                  <td class="p-5 text-sm font-semibold">
                    <%= screen.theatre.name %>
                  </td>

                  <td class="p-5 text-xs text-slate-500 font-medium">
                    <%= screen.theatre.city.name %>
                  </td>

                  <td class="p-5 text-center">
                    <span class="px-3 py-1 bg-mint-100 text-mint-600 rounded-full font-bold text-[10px] uppercase">
                      <%= screen.rows %> √ó <%= screen.cols %>
                    </span>
                  </td>

                </tr>
              <% }) %>

              <% if (screens.length === 0) { %>
                <tr>
                  <td colspan="4" class="p-10 text-center text-slate-300 font-bold italic">
                    No screens defined yet.
                  </td>
                </tr>
              <% } %>

            </tbody>
          </table>

        </div>

      </div>

    </div>

  </main>

  <footer class="py-12 text-center text-mint-200 text-[10px] uppercase font-black tracking-widest">
    CineReserve Admin Console ‚Ä¢ 2026
  </footer>

</body>
</html>
